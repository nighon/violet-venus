---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";

const posts = await getCollection("posts");
---

<Layout>
  <h1>posts index page</h1>

  <ul>
    {posts.map((post) => (
      <a href={`posts/${post.slug}`}>
        <li>{post.data.title}</li>
      </a>
    ))}
  </ul>
</Layout>
